
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_DefaultHeadPartial")

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
    </div>
    <!-- Spinner End -->


    <!-- Topbar Start -->
    @await Component.InvokeAsync("_DefaultTopbarPartial")
    <!-- Topbar End -->


    <!-- Navbar Start -->
    @await Component.InvokeAsync("_DefaultNavbarPartial")
    <!-- Navbar End -->


    <!-- Carousel Start -->
    @await Component.InvokeAsync("_DefaultCarouselPartial")
    <!-- Carousel End -->


    <!-- About Start -->
    @await Component.InvokeAsync("_DefaultAboutPartial")
    <!-- About End -->


    <!-- Features Start -->
    @await Component.InvokeAsync("_DefaultFeaturePartial")
    <!-- Features End -->


    <!-- Banner Start -->
    @await Component.InvokeAsync("_DefaultBannerPartial")
    <!-- Banner End -->


    <!-- Service Start -->
    @await Component.InvokeAsync("_DefaultServicePartial")
    <!-- Service End --> 


    <!-- Gallery Start -->
    @await Component.InvokeAsync("_DefaultGalleryPartial")
    <!-- Gallery End -->


    <!-- Product Start -->
    @await Component.InvokeAsync("_DefaultProductPartial")
    <!-- Product End -->


    <!-- Team Start -->
    @await Component.InvokeAsync("_DefaultTeamPartial")
    <!-- Team End -->


    <!-- Testimonial Start -->
    @await Component.InvokeAsync("_DefaultTestimonialPartial")

    <!-- Testimonial End -->


    <!-- Footer Start -->
    <div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <!-- Ofis Bilgileri -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Ofisimiz</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>Çalı Mahallesi Nilüfer / Bursa</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>0224 325 98 58</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>info@milky.com</p>
                    <!-- Sosyal Medya Butonları -->
                    <div class="d-flex pt-3">
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Hızlı Bağlantılar -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Hızlı Bağlantılar</h5>
                    <a class="btn btn-link" href="">Hakkımızda</a>
                    <a class="btn btn-link" href="">İletişim</a>
                    <a class="btn btn-link" href="">Hizmetlerimiz</a>
                    <a class="btn btn-link" href="">Koşullar ve Şartlar</a>
                    <a class="btn btn-link" href="">Destek</a>
                </div>

                <!-- İş Saatleri -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">İş Saatleri</h5>
                    <p class="mb-1">Pazartesi - Cuma</p>
                    <h6 class="text-light">09:00 - 19:00</h6>
                    <p class="mb-1">Cumartesi</p>
                    <h6 class="text-light">09:00 - 12:00</h6>
                    <p class="mb-1">Pazar</p>
                    <h6 class="text-light">Kapalı</h6>
                </div>

                <!-- Bülten Aboneliği -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Bülten Aboneliği</h5>
                    <p>Kampanyalardan faydalanmak için lütfen abone olun..</p>
                    <!-- Email Giriş Alanı ve Butonu -->
                    <div class="position-relative w-100">
                        <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="E-posta Adresiniz">
                        <button type="button" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">Kaydol</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer End -->


    <!-- Copyright Start -->
    <div class="container-fluid bg-secondary text-body copyright py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    &copy; <a class="fw-semi-bold" href="#">Milky</a>,Tüm Hakları Saklıdır.
                </div>
                @* <div class="col-md-6 text-center text-md-end">
                    <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                    Designed By <a class="fw-semi-bold" href="https://htmlcodex.com">HTML Codex</a>
                </div> *@
            </div>
        </div>
    </div>
    <!-- Copyright End -->


    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-circle back-to-top"><i class="bi bi-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/dairy/lib/wow/wow.min.js"></script>
    <script src="/dairy/lib/easing/easing.min.js"></script>
    <script src="/dairy/lib/waypoints/waypoints.min.js"></script>
    <script src="/dairy/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/dairy/lib/counterup/counterup.min.js"></script>
    <script src="/dairy/lib/parallax/parallax.min.js"></script>
    <script src="/dairy/lib/lightbox/js/lightbox.min.js"></script>

    <!-- Template Javascript -->
    <script src="/dairy/js/main.js"></script>
</body>

</html>