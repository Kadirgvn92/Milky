@using Milky.WebUI.DTOs.Contact

@model List<ResultContactDto>

<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Ofisimiz</h5>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>@item.Address</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>@item.Phone</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>@item.Mail</p>
                    <!-- Sosyal Medya Butonları -->
                    <div class="d-flex pt-3">
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-twitter"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-youtube"></i></a>
                        <a class="btn btn-square btn-secondary rounded-circle me-2" href=""><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <!-- Hızlı Bağlantılar -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">Hızlı Bağlantılar</h5>
                    <a class="btn btn-link" href="">Hakkımızda</a>
                    <a class="btn btn-link" href="">İletişim</a>
                    <a class="btn btn-link" href="">Hizmetlerimiz</a>
                    <a class="btn btn-link" href="">Koşullar ve Şartlar</a>
                    <a class="btn btn-link" href="">Destek</a>
                </div>

                <!-- İş Saatleri -->
                <div class="col-lg-3 col-md-6">
                    <h5 class="text-white mb-4">İş Saatleri</h5>
                    <p class="mb-1">Pazartesi - Cuma</p>
                    <h6 class="text-light">@item.OpeningHoursWeekdays</h6>
                    <p class="mb-1">Cumartesi</p>
                    <h6 class="text-light">@item.OpeningHoursWeekends</h6>
                    <p class="mb-1">Pazar</p>
                    <h6 class="text-light">@item.OpeningHoursSunday</h6>
                </div>

                <!-- Bülten Aboneliği -->
                @await Component.InvokeAsync("_DefaultNewsletterPartial")
            }
            <!-- Ofis Bilgileri -->
            
        </div>
    </div>
</div>