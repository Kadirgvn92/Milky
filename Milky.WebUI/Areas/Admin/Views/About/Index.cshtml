@using Milky.WebUI.DTOs.About

@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <div class="content mt-0 p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda</div>
                        </div>
                        <div class="card-body">

                            <div class="card-body p-0">
                                <div class="mailbox-controls">
                                    <div class="card-sub">
                                        Hakkımızda bilgilierini bu sayfada görüntüleyebilir veya güncelleyebilirsiniz.
                                    </div>
                                   
                                    <!-- /.float-right -->
                                </div>
                                <table class="table align-items-center table-striped mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">Başlık</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">Açıklama</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">1.Alt Başlık</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">2.Alt Başlık</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">1.Açıklama</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder ">2.Açıklama</th>
                                            <th class="text-uppercase text-primary text-sm font-weight-bolder text-center">Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody class="border-top">
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Title</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Description</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Subtitle1</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.Subtitle2</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.ShortDescription1</span>
                                                </td>
                                                <td class="align-middle">
                                                    <span class="text-s  mb-0">@item.ShortDescription2</span>
                                                </td>
                                                <td width="100px" class="align-middle text-center">
                                                    <a href="/Admin/About/Update/@item.ID" class="btn bg-gradient-warning ">Güncelle</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
